<%- include('partials/header') %>

<h1>Autenticación</h1>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<form action="/" method="post" class="mt-3" autocomplete="off">
  <div class="form-group">
    <label for="code">Código</label>
    <input type="text" id="code" name="code" class="form-control" required>
  </div>

  <!-- A dónde ir después de loguear (registro o tabla) -->
  <input type="hidden" name="redirect" value="<%= redirect || '/tabla' %>">

  <button type="submit" class="btn btn-primary mt-2">Ingresar</button>
</form>

<%- include('partials/footer') %>
